@model WebMagazine.Models.ViewModels.SalesRecordFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SalesRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Price" class="control-label"></label>
                <input asp-for="SalesRecord.Price" class="form-control" />
                <span asp-validation-for="SalesRecord.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" asp-items="Html.GetEnumSelectList<SaleStatus>()"></select>
                <!--<select asp-for="Status" asp-items="Html.GetEnumSelectList<WebMagazine.Models.Enums.SaleStatus>()" class="form-control"></select>-->
                <span asp-validation-for="SalesRecord.Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" class="form-control"
                        asp-items="@(new SelectList(Model.Sellers, "Id", "Name"))"></select>
                <span asp-validation-for="SalesRecord.SellerId" class="text-danger"></span>
                <!--<select asp-for="SalesRecord.SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>-->
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
